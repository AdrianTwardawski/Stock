@model Stock.Models.Pager

@if (Model.TotalPages > 0)
{
    <div class="col-8 p-0 justify-content-end">
        <ul class="pagination justify-content-end">

            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Market" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Market" asp-action="Index" asp-route-pg="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }


            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Market" asp-action="Index" asp-route-pg="@pge"> @pge</a>
                </li>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Market" asp-action="Index" asp-route-pg="@(Model.CurrentPage + 1)"> Next</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Market" asp-action="Index" asp-route-pg="@(Model.TotalPages)">Last</a>
                </li>
            }

        </ul>
    </div>
}