@inject Microsoft.AspNetCore.Identity.SignInManager<Stock.Models. ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-controller="Account" asp-action="Logoff">
        <ul class="nav navbar-nav">
            <li class="text-white nav-link">Hello, @User.Identity.Name!</li>
            <li><a class="nav-link text-white" href="javascript:document.getElementById('logoutForm').submit()">Logoff</a></li>
        </ul>
    </form>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
    </li>

}