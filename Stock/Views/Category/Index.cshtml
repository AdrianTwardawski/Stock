@model IEnumerable<Stock.Models.Category>

@{ 
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}





<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista spółek</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Update" class="btn btn-primary">
            Odśwież
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Spółka
                    </th>
                    <th>
                        Kurs
                    </th>
                    <th>
                        Zmiana
                    </th>
                    <th>
                        KursFloat
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="40%">@obj.Walor</td>
                        <td width="20%">@obj.Kurs</td>
                        <td width="20%">@obj.Zmiana</td>                      
                        <td width="20%">@obj.KursFloat</td>                      
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No category exists</p>
    }
</div>

<div class="container">


    @if (pager.TotalPages > 0)
     {
        <ul class="pagination justify-content-end">

            @if (pager.CurrentPage > 1)
             {
                <li class="page-item">
                    <a class="page-link" asp-controller="Category" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Category" asp-action="Index" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                </li>
             }


             @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
              {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="Category" asp-action="Index" asp-route-pg="@pge"> @pge</a>
                </li>
              }

             @if (pager.CurrentPage < pager.TotalPages)
              {
                <li class="page-item">
                    <a class="page-link" asp-controller="Category" asp-action="Index" asp-route-pg="@(pager.CurrentPage + 1)"> Next</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="Category" asp-action="Index" asp-route-pg="@(pager.TotalPages)">Last</a>
                </li>
              }

        </ul>
     }
</div>


