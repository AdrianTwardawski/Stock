@model IEnumerable<Stock.Models.Category>

@{
    ViewData["Title"] = "Index";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" />

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista spółek</h2>
        </div>
    </div>

    <br /><br />

    @*View Component!*@
    @*<vc:search-bar search-pager="@ViewBag.SearchPager">
        </vc:search-bar>*@

    <div class="container p-3 btn-group">
        <partial name="_search" />
        <partial name="_pager" model="@pager" />
    </div>

        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.ActionLink("Walor", "Index", new { sortOrder = ViewBag.NameSortParm })
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.KursFloat)
                        </th>
                        <th>
                            @Html.ActionLink("Zmiana", "Index", new { sortOrder = ViewBag.DateSortParm })
                        </th>                   
                    </tr>
                </thead>
                <tbody>

                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%">@obj.Walor</td>
                            <td width="25%">@obj.KursFloat</td>
                            <td width="25%">@obj.Zmiana</td>                          
                        </tr>
                    }
                </tbody>
            </table> 
        }

        else
        {
            <p>No category exists</p>
        }
</div>




