@model Stock.Models.Observed

<form method="post" asp-action="Update">
    <input asp-for="MarketId" hidden />
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update stock</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Stock"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="NumberOfActions"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="PurchasePrice"></label>
                    </div>
                </div>

                <div class="form-group row">
                     <div class="col-4">
                        <input asp-for="Stock" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="NumberOfActions" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="PurchasePrice" class="form-control" />
                    </div>                   
                </div>

                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col">
                            <input type="submit" class="btn btn-primary w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
                        <partial name="_ValidationScriptsPartial" /> }
}