@model Stock.Models.ViewModels.ObservedVM

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 p-3">Add stock</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Market"></label>
            </div>
            <div class="col-4">
                <label asp-for="NumberOfActions"></label>
            </div>
            <div class="col-4">
                <label asp-for="PurchasePrice"></label>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-4">
                <select asp-for="MarketId" asp-items="@ViewBag.TypeDropDown" class="form-control">
                    <option selected>--Wybierz Spółkę--</option>
                </select>
                <span asp-validation-for="MarketId" class="text-danger"></span>
            </div>
            <div class="col-4">
                <input asp-for="NumberOfActions" class="form-control" />
                <span asp-validation-for="NumberOfActions" class="text-danger"></span>
            </div>
            <div class="col-4">
                <input asp-for="PurchasePrice" class="form-control" />
                <span asp-validation-for="PurchasePrice" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col-6">
                    <input type="submit" class="btn btn-info w-75" value="create" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}