@model IEnumerable<Stock.Models.Observed>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">My list of stocks</h2>
        </div>
        <div class="col-6">
        <a asp-controller="Observed" asp-action="Create" class="btn btn-primary">Add stock</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0) 
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Change
                    </th>
                    <th>
                        Purchase price
                    </th>
                    <th>
                        Number of actions
                    </th>
                    <th>
                        Gain
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>

            <tbody>           
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="15%">@item.Market.Stock</td>
                        <td width="10%">@item.Market.Price</td>
                        @if (item.Market.Change > 0)
                            {
                                <td class="text-primary" width="10%">@item.Market.Change</td>
                            }
                            else
                            {
                                <td class="text-danger" width="10%">@item.Market.Change</td>
                            }
                        <td width="10%">@item.PurchasePrice</td>
                        <td width="10%">@item.NumberOfActions</td>
                        @if (item.Profit > 0)
                            {
                                <td class="text-primary" width="10%">@item.Profit</td>
                            }
                            else
                            {
                                <td class="text-danger" width="10%">@item.Profit</td>
                            }
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-primary mx-1" asp-controller="Observed" asp-action="Update" asp-route-Id="@item.Id">Update</a>
                                <a class="btn btn-danger mx-1" asp-controller="Observed" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No stocks exists.</p>
    }

</div>