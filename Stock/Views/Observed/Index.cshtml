@model IEnumerable<Stock.Models.Observed>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Moja lista spółek</h2>
        </div>
        <div class="col-6">
        <a asp-controller="Observed" asp-action="Create" class="btn btn-primary"> Dodaj spółkę</a>
        </div>
    </div>
    <br />

    @if(Model.Count() > 0) 
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Spółka
                    </th>
                    <th>
                        Zmiana
                    </th>
                    <th>
                        Liczba Akcji
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="25%">@item.Id</td>
                        <td width="25%">@item.Walor</td>
                        <td width="25%">@item.CenaZakupu</td>
                        <td width="25%">@item.LiczbaAkcji</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Brak spółek</p>
    }

</div>